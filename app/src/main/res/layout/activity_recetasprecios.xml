<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/plato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="Recetas_act">

    <androidx.cardview.widget.CardView
        android:layout_width="343dp"
        android:layout_height="623dp"
        app:cardBackgroundColor="#A83F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="326dp"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="435dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Bienvenidos a VITALITY precios"
                    android:textAlignment="center"
                    android:textColor="#CDDC39"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/vitali" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="320dp"
                android:layout_height="104dp"
                android:layout_marginTop="24dp"
                android:text="VITALITY, es la app excencial para todos aquellos que desean comenzar una alimentacion sana y asi sentirse mejor, en esta sseccion podras acceder a recetas profesionales, hechas por los mejores nutricionistas, podras calcular los precios y elegir la mejor receta para ti."
                android:textColor="#F5F6EB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

            <Spinner
                android:id="@+id/spnreceta"
                android:layout_width="288dp"
                android:layout_height="60dp"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/result"
                android:layout_width="262dp"
                android:layout_height="64dp"
                android:layout_marginTop="40dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spnreceta" />

            <RatingBar
                android:id="@+id/rt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:backgroundTint="#EDD70E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result" />

            <Button
                android:id="@+id/button"
                android:layout_width="159dp"
                android:layout_height="70dp"
                android:backgroundTint="#0CA40D"
                android:text="Calcular"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>