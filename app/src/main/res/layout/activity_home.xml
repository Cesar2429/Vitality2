<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vida"
    tools:context=".Home_act">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="353dp"
        android:layout_height="439dp"
        android:layout_marginTop="64dp"
        app:cardBackgroundColor="#85009688"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="312dp"
                android:layout_height="95dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/vita" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="336dp"
                android:layout_height="82dp"
                android:layout_marginTop="20dp"
                android:text="Vitality, es una herramienta para anotar tus propias recetas, que has creado o simplemente has hecho algún cambio de ingredientes, te   mostrará  una receta, incluyendo los ingredientes que debes utilizar y el procedimiento a seguir para realizar un delicioso y exquisito en el arte culinario."
                android:textColor="#FDFAFA"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <VideoView
                android:id="@+id/video"
                android:layout_width="298dp"
                android:layout_height="146dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="0.6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="98dp"
        app:cardBackgroundColor="#68FFEB3B"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="194dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#65CF1608"
                    android:text="Recetas"
                    app:cornerRadius="15dp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#65CF1608"
                    android:onClick="Recetas"
                    android:text="Valor Receta"
                    app:cornerRadius="15dp"
                    tools:layout_editor_absoluteX="-48dp"
                    tools:layout_editor_absoluteY="688dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#65CF1608"
                    android:onClick="Info"
                    android:text="INFORMACIÓN"
                    app:cornerRadius="15dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="126dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#65CF1608"
                    android:text="SALIR"
                    app:cornerRadius="15dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="359dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/receta" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/info" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>